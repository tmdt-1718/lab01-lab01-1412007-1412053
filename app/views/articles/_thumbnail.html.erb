<div class="article-thumbnail mb-3" highlight>
    <a href="/articles/<%= a.id %>">
        <img class="card-img-top" style="max-height: 315px;" src="<%= a.image %>" alt="">
    </a>
    <div class="card-body">
        <h4 class="card-title">
         <%= link_to article_path(a.id), class: "card-title" do %>
         <%= a.title %>
         <% end %>
     </h4>
     <h6 class="card-subtitle mb-2 text-muted"><%= a.user.name %></h6>
     <% if a.sumview.nil? %>
     <h6 class="card-subtitle text-muted">0 views</h6>
     <% else %>
     <h6 class="card-subtitle text-muted"><%= a.sumview %> views</h6>
     <% end %>       <p class="card-text">
       <%= truncate(a.body) %>	
   </p>
<% if session[:current_user_id] == a.user.id%>
   <%= link_to article_path(a.id), class: 'card-link', remote: true, method: :delete do %> 
   Delete
   <% end %>
   <% end %>
</div>
</div>