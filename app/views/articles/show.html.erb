<div class="row">
	<div class="col-md-12">
		<div class="article-thumbnail mb-3">
			<img class="card-img-top" style="max-height: 315px;" src="<%= @article.image %>" alt="">
		    <div class="card-body">
		        <h4 class="card-title">
		         	<%= @article.title %>
		     	</h4>
		     <h6 class="card-subtitle mb-2 text-muted"><%= @article.user.name %></h6>
		     <% if @article.sumview.nil? %>
		     <h6 class="card-subtitle mb-2 text-muted">0 views</h6>
		     <% else %>
		     <h6 class="card-subtitle mb-2 text-muted"><%= @article.sumview %> views</h6>
		     <% end %>   
		     <h6 class="card-subtitle mb-2 text-muted"><%= @article.updated_at %></h6>    
		     <p class="card-text">
		       <%= @article.body %>	
		     </p>
		</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">

		<% if session[:current_user_id] == @article.user.id%>
		<%= link_to edit_article_path(@article.id), class: 'btn btn-primary' do%>
			<%= fa_icon "pencil" %>
			Edit
		<% end %>
		<% end %>

		<%= link_to articles_path, class: 'btn btn-secondary' do %>
		Back
		<% end %>
	</div>
</div>
<div class="row mt-3">
	<div class="col-md-12"><span style="font-weight: bold; font-size: 18px">
		Comments</span>
		<ul id="comments">
		</ul>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<%= form_with scope: :comment, url: comments_path, local: true do |f|%>

	<div class="form-group">

		<label for=""></label>
		
		<%= f.text_area :body, class: "form-control" %>
	</div>

	<div class="row container mt-3">
		<button type="submit" class="btn btn-primary">Send</button>
	</div>

	<% end %>
	</div>
	
</div>

<input type='hidden' id="articleId" value="<%= @article.id %>">